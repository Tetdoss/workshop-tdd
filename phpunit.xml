<phpunit verbose="true" colors="true">
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="coverage/phpunit" lowUpperBound="30" highLowerBound="70"/>
    </logging>
    <testsuites>
        <testsuite name="All">
            <directory>tests/phpunit</directory>
        </testsuite>
    </testsuites>
</phpunit>
